<div>
  名前:
  <%= @user.name %>
</div>
<div>
  <%= link_to "フォロー数: #{@user.followings.count}" ,"#{request.url}/follow_lists" %>
</div>
<div>
  <%= link_to "フォロワー数: #{@user.followers.count}" ,"#{request.url}/follower_lists" %>
</div>
<div>
  <% if current_user.following?(@user) && @user.id != current_user.id %>
    <%= button_to "フォロー外す", user_relationships_path(@user.id), method: :delete %>
  <% elsif @user.id != current_user.id %>
    <%= button_to "フォローする", user_relationships_path(@user.id), method: :post %>
  <% end %>
</div>
<div>
  <%= link_to "お気に入り一覧", "#{request.url}/bookmarks",class: "px-2 py-1 bg-blue-400 text-xl text-white font-semibold rounded hover:bg-blue-500" %>
</div>