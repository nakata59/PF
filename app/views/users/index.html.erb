<div class="search-box">
    <%= form_with url: users_path, method: :get, remote: true do |f| %>
    <div class="form-group">
        <%= f.text_field :keyword, value: params[:keyword], class: "form-control" %>
        <%= f.submit 'ユーザーを検索', class: "bg-blue-600" %>
    </div>
    <% end %>
</div>
<% if @users != nil %>
  <% @users.each do |user| %>
    <%= link_to user.name, user_path(user) %>
    <% if current_user.following?(user) %>
      <%= button_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
    <% else %>
      <%= button_to "フォローする", user_relationships_path(user.id), method: :post %>
    <% end %>
  <% end %>
<% end %>
